<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context="com.kjsce.train.cia.Activity.Inspection.InspectionMenuActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CIA"
                    android:layout_centerHorizontal="true"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/createreport"
                    android:layout_toLeftOf="@id/image_button"
                    android:textColor="#fff"/>

                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/image_button"
                    android:visibility="invisible"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/TotalInspect"
        android:layout_width="242dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Total Inspection"
        android:drawableLeft="@mipmap/inspection"
        android:src="@drawable/inspection"
        android:paddingLeft="7dp"
        android:background="@drawable/rectangle_button"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/createReport"
        android:layout_width="242dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/TotalInspect"
        android:text="Create Report"
        android:drawableLeft="@mipmap/report"
        android:src="@drawable/report"
        android:layout_marginBottom="20dp"
        android:paddingLeft="7dp"
        android:background="@drawable/rectangle_button"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/help"
        android:layout_width="242dp"
        android:layout_height="55dp"
        android:layout_below="@+id/TotalInspect"
        android:paddingRight="25dp"
        android:text="Help"
        android:drawableLeft="@mipmap/help"
        android:src="@drawable/help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="7dp"
        android:background="@drawable/rectangle_button"
        android:textColor="@color/colorPrimary"
        />

    <RelativeLayout
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/logout_text"
            android:layout_centerVertical="true"
            android:background="@mipmap/logout_icon"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>

