<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
android:id="@+id/rl1"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:id="@+id/relativeLayout">



        <TextView
            android:id="@+id/sno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Seat No. : "
            android:textStyle="bold"
            android:textColor="#734D98"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/snoval"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sno"
            android:textColor="#734D98"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/type"
            android:textColor="#734D98"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sno"
            android:text="Type : "
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/typeval"
            android:textColor="#734D98"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/type"
            android:layout_below="@id/sno"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/description"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:textStyle="bold"
            android:textColor="#734D98"
            android:text="Description : "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           />

        <TextView
            android:id="@+id/descriptionval"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:textColor="#734D98"
            android:layout_toRightOf="@+id/description"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Add comments if any"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/back"
            android:textColor="#734D98"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/description"
android:id="@+id/comments"

            />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/img"
                android:layout_below="@id/comments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                tools:listitem="@layout/list_item"
                ></android.support.v7.widget.RecyclerView>
    <!--    <TextView
            android:id="@+id/imgurl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"

            android:textColor="#734D98"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            /> -->






    </RelativeLayout>



</RelativeLayout>