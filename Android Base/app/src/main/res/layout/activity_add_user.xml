<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.AddUser">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_button" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Add User"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20sp" />


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:background="@drawable/rectangle_white">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:id="@+id/user_name"
            android:layout_width="300dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:inputType="textCapWords"
                android:id="@+id/user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:text="Name:"/>

            <EditText
                android:id="@+id/user_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/secondaryText" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:id="@+id/mobile"
            android:layout_width="300dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:text="Mobile:"/>

            <EditText
                android:inputType="phone"
                android:id="@+id/mobile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/secondaryText" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/mobile"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:id="@+id/designation"
            android:layout_width="300dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/designation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:text="Designation:"/>

            <EditText
                android:inputType="textCapWords"
                android:id="@+id/designation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/secondaryText" />

        </LinearLayout>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/submit_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_below="@id/designation"
            custom:pb_colorComplete="@color/colorPrimaryDark"
            custom:pb_colorNormal="@color/colorPrimary"
            custom:pb_colorPressed="@color/colorAccent"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="Success"
            custom:pb_textProgress="Loading"
            custom:pb_textError="Error"
            custom:pb_colorError="@color/red_error" />

    </RelativeLayout>

    <ImageView
        android:layout_below="@id/card"
        android:id="@+id/train_gif"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/train_image"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>