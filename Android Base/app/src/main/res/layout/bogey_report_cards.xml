<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_button"
    android:layout_marginBottom="15dp"
    android:elevation="3dp">


    <TextView
        android:id="@+id/coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:text="B1"/>

    <View
        android:id="@+id/hl"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/coach"
        android:background="#0a0a0f"/>
    <TextView
        android:id="@+id/train_name"
        android:text="Train Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/coach"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/in_train_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hl"
        android:layout_marginTop="21dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/train_name"
        />

    <TextView
        android:id="@+id/seat_no"
        android:text="Seat No:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/train_name"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/in_seat_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@id/seat_no"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/in_train_name" />

    <TextView
        android:id="@+id/type"
        android:text="Type :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:layout_below="@+id/seat_no"
        android:textColor="#000" />

    <TextView
        android:id="@+id/in_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/type"
        android:layout_below="@+id/in_seat_no" />






</RelativeLayout>