<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/getCardsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:onClick="getCards"
        android:text="Get Cards" />

    <Button
        android:id="@+id/addCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/getCardsButton"
        android:layout_marginEnd="29dp"
        android:onClick="addCard"
        android:text="Add Card" />

    <Button
        android:id="@+id/setCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/getCardsButton"
        android:layout_marginTop="107dp"
        android:onClick="setCard"
        android:text="Set Card" />

    <Button
        android:id="@+id/removeCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addCardButton"
        android:layout_alignTop="@+id/setCardButton"
        android:onClick="removeCard"
        android:text="Remove Card" />

</RelativeLayout>